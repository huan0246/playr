<?xml version='1.0' encoding='utf-8'?>
<widget id="com.algonquinlive.huan0246" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>playr</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="mdpi" src="res/icon/android/48.png" />
        <icon density="hdpi" src="res/icon/android/72.png" />
        <icon density="xhdpi" src="res/icon/android/96.png" />
        <icon density="xxhdpi" src="res/icon/android/144.png" />
        <icon density="xxxhdpi" src="res/icon/android/192.png" />
        <splash src="res/screen/android/splash-screen-HDPI_Landscape.jpg" density="land-hdpi" />
        <splash src="res/screen/android/splash-screen-MDPI_Landscape.jpg" density="land-mdpi" />
        <splash src="res/screen/android/splash-screen-XHDPI_Landscape.jpg" density="land-xhdpi" />
        <splash src="res/screen/android/splash-screen-XXHDPI_Landscape.jpg" density="land-xxhdpi" />
        <splash src="res/screen/android/splash-screen-XXXHDPI_Landscape.png" density="land-xxxhdpi" />
        <splash src="res/screen/android/splash-screen-HDPI_Portrait.jpg" density="port-hdpi" />
        <splash src="res/screen/android/splash-screen-MDPI_Portrait.jpg" density="port-mdpi" />
        <splash src="res/screen/android/splash-screen-XHDPI_Portrait.jpg" density="port-xhdpi" />
        <splash src="res/screen/android/splash-screen-XXHDPI_Portrait.jpg" density="port-xxhdpi" />
        <splash src="res/screen/android/splash-screen-XXXHDPI_Portrait.jpg" density="port-xxxhdpi" /> 
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <edit-config target="NSMicrophoneUsageDescription" file="*-Info.plist" mode="merge">
            <string>need microphone access to record sounds</string>
        </edit-config>
        <splash src="res/screen/ios/Default@2x~iphone~anyany.jpg" />
        <splash src="res/screen/ios/Default@3x~iphone~anyany.jpg" />
        <splash height="480" src="res/screen/ios/Default@2x~iphone~anyany.jpg" width="320" />
        <splash height="960" src="res/screen/ios/Default@3x~iphone~anyany.jpg" width="640" />
    </platform>
    <preference name="SplashScreen" value="screen" />    
    <preference name="SplashScreenDelay" value="3000" />
</widget>
